<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/green" android:startColor="@color/darkGreen" />
            <corners android:radius="3dp" />
            <stroke android:width="1px" android:color="@color/darkGreen" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/darkGreen" android:startColor="@color/darkGreen" />
            <corners android:radius="3dp" />
            <stroke android:width="1px" android:color="@color/darkGreen" />
        </shape>
    </item>
</selector>